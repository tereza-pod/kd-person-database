class Helper {

def skipIfEmpty(input: String): Boolean = input.nonEmpty

def getConvoyDepartureLocation(input: String): String = {   
    if (input.nonEmpty) {   
        val parts = input.split(" - ")
        if (parts.nonEmpty) {
            parts(0)
        } else {
            None
        }
    } else {
        None
    }
}

def getConvoyArrivalLocation(input: String): String = {   
    if (input.nonEmpty) {   
        val parts = input.split(" - ")
        if (parts.nonEmpty) {
            parts(1)
        } else {
            None
        }
    } else {
        None
    }
}

}

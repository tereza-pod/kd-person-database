class Helper {

def skipIfEmpty(input: String): Boolean = input.nonEmpty

def getConvoyDepartureLocation(input: String): Option[String] = {   
    if (input.nonEmpty) {   
        input.split(" - ")(0) }
}

def getConvoyArrivalLocation(input: String): Option[String] = {   
    if (input.nonEmpty) {
        input.split(" - ")(1) 
    }
}

}
